<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeScreen">

    <fragment
        android:id="@+id/HomeScreen"
        android:name="com.example.u3cspappdesign.HomeScreen"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/home_screen">

        <action
            android:id="@+id/action_Home_to_Info"
            app:destination="@id/InfoScreen" />
    </fragment>
    <fragment
        android:id="@+id/InfoScreen"
        android:name="com.example.u3cspappdesign.InfoScreen"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/info_screen">

        <action
            android:id="@+id/action_Info_to_Home"
            app:destination="@id/HomeScreen" />
    </fragment>
</navigation>